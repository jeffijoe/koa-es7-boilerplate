{
  "name": "koa-es7-boilerplate",
  "version": "0.5.0",
  "description": "A boilerplate for writing Koa 2 apps in ES7 with Babel and Node 6.",
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=3.8"
  },
  "scripts": {
    "start": "node dist/bin/server.js",
    "build": "babel src -d dist -s",
    "dev": "nodemon src/bin/server.js",
    "debug": "icebug src/bin/server.js",
    "debug-brk": "npm run debug -- --break",
    "test": "mocha --require test/_helpers test/**/*.spec.js --compilers js:babel-register -R dot --timeout 5000",
    "test-watch": "npm run test -- --watch",
    "lint": "eslint src/ test/",
    "lint-watch": "esw -w src/ test/",
    "cover": "cross-env NODE_ENV=test nyc npm test"
  },
  "author": "Jeff Hansen",
  "license": "MIT",
  "dependencies": {
    "awilix": "^2.2.1",
    "awilix-koa": "^0.1.0",
    "babel-preset-stage-1": "^6.13.0",
    "babel-register": "^6.11.6",
    "bristol": "^0.3.3",
    "glob": "^7.0.5",
    "kcors": "^1.2.1",
    "koa": "^2.0.0-alpha.3",
    "koa-bodyparser": "^3.0.0",
    "koa-convert": "^1.2.0",
    "koa-respond": "^1.0.0",
    "koa-router": "^7.0.1",
    "lodash": "^4.15.0",
    "palin": "^2.0.1",
    "source-map-support": "^0.4.2",
    "yenv": "^1.0.6"
  },
  "devDependencies": {
    "app-module-path": "^1.1.0",
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-plugin-istanbul": "^2.0.0",
    "babel-plugin-source-map-support": "0.0.1",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-es2015-node6": "^0.3.0",
    "chai": "^3.5.0",
    "cross-env": "^2.0.0",
    "eslint": "^3.3.1",
    "eslint-config-standard": "^6.0.0-beta.3",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "eslint-watch": "^2.1.14",
    "icebug": "^0.1.6",
    "mocha": "^3.0.2",
    "nodemon": "^1.10.2",
    "nyc": "^8.1.0",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "supertest": "^2.0.0"
  },
  "directories": {
    "test": "test"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src/**/*.js"
    ]
  }
}
