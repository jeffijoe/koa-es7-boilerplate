{
  "name": "koa-es7-boilerplate",
  "version": "0.4.0",
  "description": "A boilerplate for writing Koa 2 apps in ES7 with Babel and Node 6.",
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=3.8"
  },
  "scripts": {
    "start": "node dist/bin/server.js",
    "build": "babel src -d dist -s",
    "dev": "nodemon src/bin/server.js",
    "debug": "icebug src/bin/server.js",
    "debug-brk": "npm run debug -- --break",
    "test": "mocha test/**/*.js --compilers js:babel-register --require test/_helpers",
    "test-watch": "npm run test -- --watch",
    "lint": "eslint src/ test/",
    "lint-watch": "esw -w src/ test/"
  },
  "author": "Jeff Hansen",
  "license": "MIT",
  "dependencies": {
    "app-module-path": "^1.1.0",
    "awilix": "^2.1.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.9.0",
    "glob": "^7.0.5",
    "kcors": "^1.2.1",
    "koa": "^2.0.0-alpha.3",
    "koa-bodyparser": "^3.0.0",
    "koa-convert": "^1.2.0",
    "koa-respond": "^1.0.0",
    "koa-router": "^7.0.1",
    "lodash": "^4.13.1",
    "source-map-support": "^0.4.1",
    "yenv": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.1.2",
    "babel-plugin-source-map-support": "0.0.1",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015-node6": "^0.2.0",
    "chai": "^3.5.0",
    "eslint": "^3.0.1",
    "eslint-watch": "^2.1.13",
    "icebug": "^0.1.6",
    "mocha": "^2.5.3",
    "nodemon": "^1.9.2",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "supertest": "^1.2.0"
  }
}
